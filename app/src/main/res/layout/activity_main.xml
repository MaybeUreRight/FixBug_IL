<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context="com.xgkj.ilive.activity.MainActivity">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="15px"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/home_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/home_image"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/home_pager_unchecked"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="15px"
                android:text="@string/home_text"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/live_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/live_image"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/live_unchecked"/>

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="15px"
                android:text="@string/live_text"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/rb_edit"
            android:layout_width="0dp"
            android:layout_height="250px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="40px"
            android:layout_weight="1"
            android:button="@null"
            android:src="@drawable/edit" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/publish_rb_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/publish_image"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/publish_unchecked"/>

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="15px"
                android:text="@string/publish_text"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mine_rb_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/mine_image"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/mine_uncheck"/>

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50px"
                android:layout_marginTop="15px"
                android:text="@string/mine_text"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
