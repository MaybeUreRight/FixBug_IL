<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="32px"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/new_pic"
        android:layout_width="350px"
        android:layout_height="350px"
        android:src="@drawable/default_pic"
        android:scaleType="fitXY"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="96px">
        <TextView
            android:id="@+id/news_title"
            android:layout_marginTop="64px"
            android:layout_marginLeft="60px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="50px"
            android:ellipsize="end"
            android:textColor="@android:color/black"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="32px"
            android:layout_marginLeft="60px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/news_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40px"
                android:textColor="@color/item_color"
                android:singleLine="true"
                android:ellipsize="end"/>
            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@drawable/home_item_back"
                android:layout_marginTop="10px"
                android:layout_marginLeft="77px"
                android:padding="20px"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_marginLeft="60px"
            android:id="@+id/hot_infotmation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:textColor="@color/info_bg_time_color"
            android:textSize="40px"
            />
        <View
            android:layout_marginTop="15px"
            android:layout_marginLeft="64px"
            android:gravity="left"
            style="@style/news_underline_style"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
