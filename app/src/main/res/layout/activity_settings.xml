<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mine_list_layout_background_color"
    tools:context="com.xgkj.ilive.activity.SettingsActivity">

    <include layout="@layout/title_layout"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/personal_profile"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="90px"
        android:paddingRight="70px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="个人资料"
            android:textSize="50px"
            android:textColor="@color/color_black_333333"/>
        <com.xgkj.ilive.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginRight="36px"
            android:src="@drawable/mine_circle_icon"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        style="@style/mine_list_underline_style"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/update_password"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="90px"
        android:paddingRight="70px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="更改密码"
            android:textColor="@color/color_black_333333"
            android:textSize="50px"/>

        <ImageView
            style="@style/mine_list_left_icon"
            android:src="@drawable/mine_back"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View style="@style/mine_list_underline_style"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/wipe_cache_partition"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="90px"
        android:paddingRight="70px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="绑定手机"
            android:textColor="@color/color_black_333333"
            android:textSize="50px"/>

        <ImageView
            style="@style/mine_list_left_icon"
            android:src="@drawable/mine_back"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View style="@style/mine_list_underline_style"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/help_feedback"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="90px"
        android:paddingRight="70px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="帮助反馈"
            android:textColor="@color/color_black_333333"
            android:textSize="50px"/>

        <ImageView
            style="@style/mine_list_left_icon"
            android:src="@drawable/mine_back"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View style="@style/mine_list_underline_style"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/about_many"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="90px"
        android:paddingRight="70px">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="关于我们"
            android:textColor="@color/color_black_333333"
            android:textSize="50px"/>

        <ImageView
            style="@style/mine_list_left_icon"
            android:src="@drawable/mine_back"
            android:layout_marginLeft="36px"
            android:layout_marginRight="36px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <View style="@style/mine_list_underline_style"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64px">
        <Button
            android:id="@+id/exit_the_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150px"
            android:layout_marginEnd="150px"
            android:text="退出当前账号"
            android:textSize="50px"
            android:background="@color/main_rb_btn_checked_color"
            android:textColor="@android:color/white"
           />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
