<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mine_layout"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@drawable/mine_background"
        android:paddingLeft="90px"
        android:paddingRight="90px">
        <com.xgkj.ilive.view.CircleImageView
            android:id="@+id/mine_round_circle"
            android:layout_width="256px"
            android:layout_height="256px"
            android:src="@drawable/mine_circle_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="167px"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:layout_below="@id/mine_round_circle"
            android:textSize="50px"
            android:layout_marginTop="51px"
            />
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:layout_marginTop="71px"
            android:layout_below="@id/tv_nickname"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/company_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="50px"
            android:layout_marginTop="32px"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@id/tv_company"
            android:layout_marginBottom="10px"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mine_list_layout_background_color"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mine_attention"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="90px"
            android:paddingRight="90px">

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_follow" />

            <TextView
                style="@style/mine_list_text_style"
                android:text="我的关注" />

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_back"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
           style="@style/mine_list_underline_style"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mine_browse_records"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="90px"
            android:paddingRight="90px">

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/browsing_history" />

            <TextView
                style="@style/mine_list_text_style"
                android:text="浏览记录" />

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_back"
                />

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/mine_list_underline_style"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mine_live"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="90px"
            android:paddingRight="90px">

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_live" />

            <TextView
                style="@style/mine_list_text_style"
                android:text="我的直播" />

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_back"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/mine_list_underline_style"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/mine_settings"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="90px"
            android:paddingRight="90px">

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_settings" />

            <TextView
                style="@style/mine_list_text_style"
                android:text="设置" />

            <ImageView
                style="@style/mine_list_left_icon"
                android:src="@drawable/mine_back"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/mine_list_underline_style"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
