<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/main_rb_btn_checked_color"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/register_back"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@drawable/login_back"
            android:layout_marginTop="10px"
            android:layout_marginLeft="77px"
            android:padding="20px"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="50px"
            android:layout_marginTop="30px"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/register_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="完成"
            android:layout_alignParentRight="true"
            android:textSize="50px"
            android:layout_marginRight="77px"
            android:layout_marginTop="30px"
            android:textColor="@android:color/white"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225px"
        android:layout_marginRight="225px"
        android:layout_marginTop="400px"
        android:orientation="vertical"
        android:background="@drawable/login_background">
        <EditText
            android:id="@+id/et_nickname"
            style="@style/login_et_input_style"
            android:hint="昵称"
            android:textColorHint="@color/color_black_666666"
            />
        <View
            style="@style/login_register_underline_style"/>
        <EditText
            android:id="@+id/et_phone_number"
            style="@style/login_et_input_style"
            android:inputType="number"
            android:hint="手机号"
            android:textColorHint="@color/color_black_666666"/>
        <View
            style="@style/login_register_underline_style"/>
        <EditText
            android:id="@+id/et_phone_password"
            style="@style/login_et_input_style"
            android:hint="输入您的密码"
            android:inputType="numberPassword"
            android:textColorHint="@color/color_black_666666"/>
        <View
            style="@style/login_register_underline_style"/>
        <EditText
            android:id="@+id/et_code"
            style="@style/login_et_input_style"
            android:hint="输入验证码"
            android:textColorHint="@color/color_black_666666"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/identtifying_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="77px"
        android:layout_marginLeft="225px"
        android:layout_marginRight="225px"
        android:text="获取验证码"
        android:textSize="50px"
        android:background="@color/main_rb_btn_checked_color"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64px"
        android:layout_marginLeft="225px"
        android:layout_marginRight="225px"
        android:textSize="40px"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/color_black_999999"
        android:text="根据国家网信办发布的《移动互联网应用程序信息服务规定》，自2016年8月1日起，从各大应用商店下载app,均需通过手机进行注册登录。"/>
</com.zhy.autolayout.AutoLinearLayout>
