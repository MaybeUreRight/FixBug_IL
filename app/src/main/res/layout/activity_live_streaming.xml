<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/live_root_layout"
    tools:context="com.xgkj.ilive.activity.LiveStreamingActivity">
    <com.netease.vcloud.video.render.NeteaseView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/start_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/live_bg_202020"
        android:text="开始直播"
        android:textColor="@android:color/white"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/wifi_linear"
            android:layout_width="400px"
            android:layout_height="180px"
            android:background="@drawable/live_signal"
            android:gravity="center"
            android:layout_marginLeft="150px"
            android:layout_marginTop="100px">
            <ImageView
                android:id="@+id/wifi_signal_status"
                android:layout_width="0dp"
                android:layout_height="80px"
                android:layout_weight="1"
                android:src="@drawable/wifi_strong"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/signal_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@android:color/white"/>
                <Chronometer
                    android:id="@+id/live_time"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:textSize="40px"
                    android:text="00:00:00"
                    android:format="00:00:00"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/join_linear"
            android:layout_width="550px"
            android:layout_height="100px"
            android:background="@drawable/join_people"
            android:layout_marginTop="20px"
            android:layout_below="@id/wifi_linear"
            android:padding="3px">
            <TextView
                android:id="@+id/live_join_people"
                android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="参与几人"
                android:textSize="40px"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:textColor="@android:color/white"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50px"
        android:layout_marginRight="10px"
        android:gravity="center">
        <Button
            android:id="@+id/start_microphone_btn"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/start_microphone"/>

        <Button
            android:id="@+id/change_live_camera"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/change_camera_selector"
            android:layout_marginLeft="40px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="400px"
            android:layout_height="150px"
            android:layout_marginLeft="60px"
            android:background="@drawable/stop_live_bg"
            android:gravity="center">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/stop_live_cancel"/>
            <TextView
                android:id="@+id/stop_live"
                android:layout_marginLeft="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停播"
                android:textColor="@android:color/white"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/chat_room_linear"
        android:layout_below="@id/join_linear"
        android:layout_width="1000px"
        android:layout_height="1200px"
        android:layout_marginTop="500px"
        android:orientation="vertical"
        android:paddingLeft="10px"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatroom_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/et_chatroom_content"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_marginBottom="60px"
            android:hint="我来说两句~"
            android:textSize="30px"
            android:textColorHint="@android:color/white"
            android:paddingLeft="10px"
            android:layout_marginLeft="40px"
            android:imeOptions="actionSend"
            android:textColor="@android:color/white"
            android:background="@drawable/chat_room_et_bg"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40px"
        android:layout_marginBottom="80px">
        <Button
            android:id="@+id/start_shared"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/live_share"/>
        <Button
            android:id="@+id/start_close_chat"
            android:layout_marginTop="46px"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/start_chat_room"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
