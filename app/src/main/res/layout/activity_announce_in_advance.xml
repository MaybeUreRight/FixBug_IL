<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/announce_advance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xgkj.ilive.activity.EditorActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/upload_front_cover_layout"
        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="@color/color_black_999999"
        android:paddingTop="32px">
        <ImageView
            android:id="@+id/anchor_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anchor_back"
            android:padding="23px"
            android:layout_marginLeft="23px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建预告"
            android:padding="23px"
            android:layout_centerHorizontal="true"
            android:textSize="50px"
            android:textColor="@android:color/white"/>
        <ImageView
            android:id="@+id/upload_front_cover"
            android:layout_width="563px"
            android:layout_height="wrap_content"
            android:src="@drawable/anchor_upload"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/settings_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置封面"
            android:layout_centerInParent="true"
            android:textSize="50px"
            android:textColor="@android:color/white"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="44px">
        <TextView
            android:layout_marginLeft="64px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动标题"
            android:textSize="50px"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="64px">
            <TextView
                android:id="@+id/settings_title"
                android:layout_marginLeft="64px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:gravity="right"
                android:textSize="40px"
                android:padding="20px"
                android:textColor="@color/item_color"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/achor_enter"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        style="@style/mine_list_underline_style"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="44px">
        <TextView
            android:layout_marginLeft="64px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间"
            android:textSize="50px"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="64px">
            <TextView
                android:id="@+id/appointment_time"
                android:layout_marginLeft="64px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:gravity="right"
                android:textSize="40px"
                android:textColor="@color/item_color"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/achor_enter"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        style="@style/mine_list_underline_style"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="44px">
        <TextView
            android:layout_marginLeft="64px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谁可以看"
            android:textSize="50px"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="64px">
            <TextView
                android:id="@+id/who_is_look"
                android:layout_marginLeft="64px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未设置"
                android:gravity="right"
                android:textSize="40px"
                android:padding="20px"
                android:textColor="@color/item_color"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/achor_enter"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        style="@style/mine_list_underline_style"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="44px"
        >
        <TextView
            android:id="@+id/add_title"
            android:layout_marginLeft="64px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动介绍"
            android:gravity="top"
            android:textSize="50px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <EditText
        android:id="@+id/activity_introduced"
        android:layout_width="match_parent"
        android:layout_height="512px"
        android:background="@android:color/white"
        android:padding="44px"
        android:textSize="50px"
        android:gravity="top"
        android:paddingLeft="115px"
        android:paddingRight="115px"/>
    <View
        style="@style/mine_list_underline_style"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/release_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="96px"
            android:layout_marginLeft="113px"
            android:layout_marginRight="113px"
            android:text="发布预告"
            android:textSize="50px"
            android:textColor="@android:color/white"
            android:background="@color/main_rb_btn_checked_color"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
