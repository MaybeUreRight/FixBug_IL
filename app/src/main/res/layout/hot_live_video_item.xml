<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/hot_live_relative"
    android:layout_marginBottom="64px"
    android:background="@android:color/white">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingTop="32px"
        android:paddingBottom="32px">
        <com.xgkj.ilive.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="153px"
            android:layout_height="150px"
            android:layout_marginLeft="32px"
            android:src="@drawable/chat_icon"
            />
        <TextView
            android:id="@+id/return_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="40px"
            android:text="标题"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/play_circle"
            android:drawablePadding="96px"
            android:gravity="right"
            android:paddingRight="64px"
            android:text="预告"
            android:textColor="@android:color/black"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900px">
        <Button
            android:id="@+id/play_type"
            android:layout_width="160px"
            android:layout_height="96px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:background="@color/main_rb_btn_checked_color"
            android:text="回放"
            android:textColor="@android:color/white"/>
        <ImageView
            android:id="@+id/list_video_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/default_pic"
            android:scaleType="fitXY"
            />
        <EditText
            android:id="@+id/jiami"
            android:layout_width="450px"
            android:layout_height="160px"
            android:hint="加密"
            android:inputType="numberPassword"
            android:textColorHint="@android:color/white"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="50px"
            style="@style/et_chat_content_view"
            android:layout_centerInParent="true"
            android:background="@color/live_bg_202020"
            android:textColor="@android:color/white"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_video_pic"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="32px"
        android:paddingTop="32px"
        android:paddingLeft="64px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名称:"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/company_title"
            android:paddingLeft="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海尔"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/look_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0次观看"
            android:gravity="right"
            android:textColor="@android:color/black"/>
        <Button
            android:id="@+id/btn_shared"
            android:layout_width="50px"
            android:layout_height="45px"
            android:layout_marginLeft="64px"
            android:layout_marginRight="64px"
            android:padding="20px"
            android:background="@drawable/shared_selector"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
