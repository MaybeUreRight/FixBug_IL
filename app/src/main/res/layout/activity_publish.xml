<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1500px"
        android:background="@drawable/publish_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="50px"
            android:gravity="center"
            android:textColor="@color/color_black_333333"
            android:layout_marginTop="103px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical">
           <com.zhy.autolayout.AutoLinearLayout
               android:id="@+id/announce_in_advance"
               android:layout_width="0dp"
               android:layout_height="520px"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/btn_advance"
                   android:layout_width="300px"
                   android:layout_height="300px"
                   android:src="@drawable/publish_selector"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="50px"
                   android:textColor="@color/color_black_333333"
                   android:text="预告"
                   android:layout_marginTop="20px"/>
           </com.zhy.autolayout.AutoLinearLayout>

           <com.zhy.autolayout.AutoLinearLayout
               android:id="@+id/live_rb"
               android:layout_width="0dp"
               android:layout_height="520px"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/btn_live"
                   android:layout_width="300px"
                   android:layout_height="300px"
                   android:src="@drawable/live_pub_selector"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="50px"
                   android:textColor="@color/color_black_333333"
                   android:text="直播"
                   android:layout_marginTop="20px"/>
           </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/live_bg">
        <ImageView
            android:id="@+id/publish_cancel"
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/live_cancel"
            android:paddingTop="64px"
            android:paddingBottom="64px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
