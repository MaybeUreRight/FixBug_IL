<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xgkj.ilive.activity.BrowseRecordsActivity">

    <include layout="@layout/title_layout"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/browse_records_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="直播"
            android:textColor="@color/main_rb_btn_checked_color"
            android:textSize="50px"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="96px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/brows_history_drivder"/>
        <TextView
            android:id="@+id/browse_records_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="视频"
            android:textSize="50px"
            android:gravity="center"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="4px"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/browse_records_live_underline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_rb_btn_checked_color"
            />
        <TextView
            android:id="@+id/browse_records_video_underline"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_rb_btn_checked_color"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <FrameLayout
        android:id="@+id/browse_records_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.zhy.autolayout.AutoLinearLayout>
