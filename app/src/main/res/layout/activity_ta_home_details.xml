<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/color_black_333333"/>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anchor_back"
        android:padding="15dp"/>
    <com.xgkj.ilive.view.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="93dp"
        android:src="@drawable/nim_avatar_group"/>
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吃播号"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@id/iv_head"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/live_bg_202020"/>
    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不轻易放弃 否则对不起自己"
        android:textSize="12dp"
        android:layout_below="@id/tv_nickname"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:textColor="@color/color_black_333333"/>
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sign"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="11sp"
            android:text="4 关注"/>
        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:layout_marginLeft="8dp"
            android:textSize="11sp"
            android:text="4 粉丝"/>
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_nickname"
        android:layout_marginTop="15dp"
        android:background="#ccc"/>
    <LinearLayout
        android:id="@+id/ll_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/line1">

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"/>
        <TextView
            android:id="@+id/line_video"
            android:layout_width="25dp"
            android:layout_height="2dp"
            android:background="#ff6854"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ll_video"
        android:layout_below="@id/line1">

        <TextView
            android:id="@+id/tv_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播"/>
        <TextView
            android:id="@+id/line_live"
            android:layout_width="25dp"
            android:layout_height="2dp"
            android:background="#ff6854"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_below="@id/ll_video"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/video_viewpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2">

    </android.support.v4.view.ViewPager>
</RelativeLayout>