<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xgkj.ilive.activity.BindingActivity">
    <include layout="@layout/title_layout"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64px"
        android:layout_marginLeft="64px"
        android:layout_marginRight="64px"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_weight="2"
            android:hint="请输入您的手机号"
            android:padding="32px"
            android:background="@drawable/login_et_code_bg"
            android:textSize="50px"
            android:layout_marginRight="32px"/>
        <Button
            android:id="@+id/get_phone_code"
            android:layout_width="0dp"
            android:layout_height="150px"
            android:layout_weight="1"
            android:background="@color/main_rb_btn_checked_color"
            android:text="发送验证码"
            android:textColor="@android:color/white"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:hint="请输入验证码"
        android:textSize="50px"
        android:layout_marginTop="64px"
        android:layout_marginLeft="64px"
        android:layout_marginRight="64px"
        android:padding="32px"
        android:background="@drawable/login_et_code_bg"/>

    <EditText
        android:id="@+id/settings_pwd"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:hint="请设置密码"
        android:layout_marginTop="64px"
        android:layout_marginLeft="64px"
        android:layout_marginRight="64px"
        android:textSize="50px"
        android:padding="32px"
        android:inputType="numberPassword"
        android:background="@drawable/login_et_code_bg"/>

    <Button
        android:id="@+id/btn_finished"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:text="完成"
        android:textSize="50px"
        android:layout_marginTop="64px"
        android:layout_marginLeft="64px"
        android:layout_marginRight="64px"
        android:background="@color/main_rb_btn_checked_color"
        android:textColor="@android:color/white"
       />
</com.zhy.autolayout.AutoLinearLayout>
